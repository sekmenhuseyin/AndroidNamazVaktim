<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/flag"
        android:layout_marginBottom="@dimen/onbes"
        android:layout_marginLeft="@dimen/onbes"
        android:layout_toRightOf="@+id/flag"
        android:textColor="@android:color/white"
        android:textSize="@dimen/yirmiT" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="@dimen/yetmis"
        android:layout_height="@dimen/elli"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/on"
        android:layout_marginTop="@dimen/on"
        android:contentDescription="@string/Flag" />

</RelativeLayout>