<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/monthlyTarih"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparentBlack"
            android:gravity="center"
            android:text="@string/Istanbul"
            android:textColor="@android:color/white"
            android:textSize="@dimen/yirmiT" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/yirmi"
        android:background="@android:color/white"
        android:baselineAligned="false"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_imsak"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onT" />

            <TextView
                android:id="@+id/monthlyImsak"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_none"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onbesT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_gunes"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onT" />

            <TextView
                android:id="@+id/monthlyGunes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_none"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onbesT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_ogle"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onT" />

            <TextView
                android:id="@+id/monthlyOgle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_none"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onbesT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_ikindi"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onT" />

            <TextView
                android:id="@+id/monthlyIkindi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_none"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onbesT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_aksam"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onT" />

            <TextView
                android:id="@+id/monthlyAksam"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_none"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onbesT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_yatsi"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onT" />

            <TextView
                android:id="@+id/monthlyYatsi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vakit_none"
                android:textColor="@android:color/black"
                android:textSize="@dimen/onbesT" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>